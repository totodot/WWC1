{% import "./macros.njk" as forms %}
<div class="title">
    Sign In Form
</div>
<div class="box">
    <div class="box-inner">
        <form>
            {{ forms.field('user', 'Username') }}

            {{ forms.field('lock', 'Password', 'password') }}
            
            <div class="row align-center">
                <div class="flex-1">
                    {{ forms.checkbox('rememberMe', 'Remember me.', 'noM') }}    
                </div>
                <div class="flex-1">
                    {{ forms.button('Sign In') }}
                </div>
                
            </div>
        </form>
    </div>
</div>